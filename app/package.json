{
  "name": "paddy-collection-center",
  "version": "1.0.0",
  "description": "Paddy Harvest Collection Center Management System",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "test": "jest",
    "lint": "eslint .",
    "db:migrate": "cd ../scripts && ./setup_database.sh",
    "db:backup": "cd ../scripts && ./backup.sh"
  },
  "keywords": [
    "paddy",
    "harvest",
    "collection",
    "agriculture",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.11.5",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "jsqr": "^1.4.0",
    "mysql2": "^3.6.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "serialport": "^12.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "electron-forge": "^5.2.4",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "vite": "^5.0.7",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.paddycenter.app",
    "productName": "Paddy Collection Center",
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "build/**/*",
      "package.json",
      ".env.example"
    ],
    "extraResources": [
      {
        "from": ".env.example",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "differentialPackage": false
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
